<!-- views/team-members.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Team Members</title>
  <style>
    table {
      width: 90%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #fff;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: center;
    }
    th {
      background-color: #333;
      color: #fff;
    }
    tr:hover {
      background-color: #f4f4f4;
    }
    /* Link Styles */
    .team-member-link {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }
    .team-member-link:hover {
      text-decoration: underline;
    }
    /* Button Styles */
    .action-button {
      padding: 6px 12px;
      margin: 0 5px;
      border: none;
      border-radius: 4px;
      color: #fff;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
    }
    .edit-button {
      background-color: #ffc107; /* Yellow */
    }
    .edit-button:hover {
      background-color: #e0a800;
    }
    .delete-button {
      background-color: #dc3545; /* Red */
    }
    .delete-button:hover {
      background-color: #c82333;
    }
    .add-button {
      background-color: #28a745; /* Green */
    }
    .add-button:hover {
      background-color: #218838;
    }
    /* Flash Messages Styles */
    .alert {
      padding: 15px;
      margin: 20px auto;
      width: 90%;
      border: 1px solid transparent;
      border-radius: 4px;
    }
    .alert.success {
      background-color: #d4edda;
      color: #155724;
      border-color: #c3e6cb;
    }
    .alert.error {
      background-color: #f8d7da;
      color: #721c24;
      border-color: #f5c6cb;
    }
    /* Add Button Container */
    .add-button-container {
      text-align: center;
      margin: 20px auto;
    }
  </style>
</head>
<body>
  <%- include('admin-navbar.ejs') %>

  <% if (success_messages.length > 0) { %>
    <div class="alert success">
      <ul>
        <% success_messages.forEach(function(message){ %>
          <li><%= message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <% if (error_messages.length > 0) { %>
    <div class="alert error">
      <ul>
        <% error_messages.forEach(function(message){ %>
          <li><%= message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <div class="container">
    <h1 style="text-align: center;">Team Members</h1>

    <!-- Add Team Member Button -->
    <div class="add-button-container">
      <a href="/admin/team-members/add" class="action-button add-button">Add Team Member</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th> <!-- Actions Column -->
        </tr>
      </thead>
      <tbody>
        <% teamMembers.forEach(member => { %>
          <tr>
            <td>
              <a href="/admin/team-members/<%= member.user_name %>" class="team-member-link">
                <%= member.first_name + ' ' + member.last_name %>
              </a>
            </td>
            <td><%= member.email %></td>
            <td><%= member.role %></td>
            <td>
              <!-- Edit Button -->
              <a href="/admin/team-members/<%= member.user_name %>/edit" class="action-button edit-button">Edit</a>
              
              <!-- Delete Button -->
              <form action="/admin/team-members/<%= member.user_name %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="action-button delete-button" onclick="return confirm('Are you sure you want to delete this team member?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
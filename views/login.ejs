<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f9f6f3;
        }

        .content-wrapper {
            flex: 1;
            padding: 40px 20px;
        }

        .login-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-bottom: 20px;
        }

        .form-label {
            font-size: 18px;
            color: #555;
            margin-bottom: 10px;
            display: block;
            text-align: left;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #a63636;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #8c2e2e;
        }

        .alert {
            text-align: left;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        footer a {
            color: #a63636;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="content-wrapper">
        <div class="login-container">
            <h1>Login</h1>

            <!-- Display Flash Messages -->
            <% if (typeof error_messages !== 'undefined' && error_messages.length > 0) { %>
                <div class="alert alert-danger">
                    <% error_messages.forEach(function(message) { %>
                        <p><%= message %></p>
                    <% }); %>
                </div>
            <% } %>
            <% if (typeof success_messages !== 'undefined' && success_messages.length > 0) { %>
                <div class="alert alert-success">
                    <% success_messages.forEach(function(message) { %>
                        <p><%= message %></p>
                    <% }); %>
                </div>
            <% } %>

            <!-- Login Form -->
            <form action="/login" method="POST">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Username" required>

                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>

                <button type="submit" class="btn-primary">Login</button>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>

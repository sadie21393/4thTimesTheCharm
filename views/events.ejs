<!DOCTYPE html>
<html>
<head>
  <title>Events</title>
  <style>
    .tabs {
      display: flex;
      justify-content: center;
      margin: 20px 0;
    }
    .tabs a {
      padding: 10px 20px;
      margin: 0 5px;
      text-decoration: none;
      background-color: #ddd;
      color: #333;
      border-radius: 5px;
      font-size: 16px;
    }
    .tabs a.active {
      background-color: #333;
      color: #fff;
    }
    .events-table {
      width: 90%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #fff;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: center;
    }
    th {
      background-color: #333;
      color: #fff;
    }
    tr:hover {
      background-color: #f4f4f4;
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>
  <div class="tabs">
    <a href="/admin/events/upcoming" class="<%= activeTab === 'upcoming' ? 'active' : '' %>">Upcoming</a>
    <a href="/admin/events/held" class="<%= activeTab === 'held' ? 'active' : '' %>">Completed</a>
    <a href="/admin/events/cancelled" class="<%= activeTab === 'cancelled' ? 'active' : '' %>">Cancelled</a>
  </div>

  <table class="events-table">
    <thead>
      <tr>
        <th>Event ID</th>
        <th>Location</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% events.forEach(event => { %>
        <tr>
          <td><%= event.event_id %></td>
          <td><%= event.location %></td>
          <td><%= new Date(event.date).toLocaleDateString() %></td>
          <td><%= event.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

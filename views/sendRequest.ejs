<!DOCTYPE html>
<html>
<head>
  <title>Edit Character</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #F4F4F4;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
      color: #333;
    }
    main {
      margin: 20px auto;
      width: 90%;
      max-width: 800px;
      background-color: #FFF;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }
    form {
      margin-bottom: 30px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    input, select, button {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }
    button {
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }
    button:hover {
      background-color: #45A049;
    }
  </style>
</head>
<body>
  <h1 style="text-align: center;">Send Request to Host and Event For TSP</h1>
  <form action="/sendRequest/<%= characters.id %>" method="POST">
    <!-- Character First Name -->
    <label for="first_name">First Name</label>
    <input type="text" id="first_name" name="first_name" value="<%= characters.first_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Character Last Name -->
    <label for="last_name">Last Name</label>
    <input type="text" id="last_name" name="last_name" value="<%= characters.last_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Jedi (Checkbox) -->
    <label for="jedi">
      <input type="checkbox" id="jedi" name="jedi" value="true" <%= characters.jedi ? 'checked' : '' %>>
      Jedi
    </label>
    <!-- Weapon (Radio Buttons) -->
    <label>Weapon</label>
    <label>
      <input type="radio" name="weapon" value="L" <%= characters.weapon === 'L' ? 'checked' : '' %>> Lightsaber
    </label>
    <label>
      <input type="radio" name="weapon" value="B" <%= characters.weapon === 'B' ? 'checked' : '' %>> Blaster
    </label>
    <label>
      <input type="radio" name="weapon" value="N" <%= characters.weapon === 'N' ? 'checked' : '' %>> None
    </label>
    <!-- Planet Name -->
    <label for="planet_name">Planet Name</label>
    <select id="planet_name" name="planet_name">
      <% planets.forEach(planet => { %>
        <option value="<%= planet.id %>" <%= characters.planet_name === planet.id ? 'selected' : '' %>>
          <%= planet.planet_name %>
        </option>
      <% }) %>
    </select>
    <!-- Submit Button -->
    <button type="submit">Save Changes</button>
  </form>
</main>

<%- include('partials/footer') %>

</body>
</html>
